<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".presentation.generalforecast.GeneralForecastFragment">

    <EditText
        android:id="@+id/general_city_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_city"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/general_first_weather_card"
        layout="@layout/large_weather_card"
        app:layout_constraintTop_toTopOf="@id/general_city_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/general_second_weather_card"
        layout="@layout/large_weather_card"
        app:layout_constraintTop_toTopOf="@id/general_first_weather_card"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        android:id="@+id/general_third_weather_card"
        layout="@layout/large_weather_card"
        app:layout_constraintTop_toTopOf="@id/general_first_weather_card"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/general_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>